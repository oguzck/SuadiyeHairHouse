<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8">
    <title>Suadiye Hair House</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Free HTML Templates" name="keywords">
    <meta content="Free HTML Templates" name="description">

    <!-- Favicon -->
    <link href="~/source/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@500;600;700&family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/source/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/source/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/source/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <link href="~/source/lib/twentytwenty/twentytwenty.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/source/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/source/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- Spinner Start -->
    <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-grow text-primary m-1" role="status">
            <span class="sr-only">Loading...</span>
        </div>
        <div class="spinner-grow text-dark m-1" role="status">
            <span class="sr-only">Loading...</span>
        </div>
        <div class="spinner-grow text-secondary m-1" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>

    <nav style="background-color:#383e42 !important" class="navbar navbar-expand-lg bg-white navbar-light shadow-sm px-5 py-3 py-lg-0">
        <a href="@Url.Action("Index","Home")">
            <img src="~/source/img/logo.png" style="border-color : white"  width="auto" height="100"/>
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div style="color:antiquewhite !important" class="navbar-nav ms-auto py-0">
                @Html.ActionLink("Ana Sayfa","Index","Home",null,new {@class = "nav-item nav-link active" })
                @Html.ActionLink("Hakkımızda","About","Home",null,new {@class = "nav-item nav-link active" })
                @Html.ActionLink("Hizmetlerimiz","Services","Home",null,new {@class = "nav-item nav-link active" })
                @Html.ActionLink("SSS","FrequentlyAskedQuestions","Home",null,new {@class = "nav-item nav-link active" })
                @Html.ActionLink("Öncesi & Sonrası","BeforeAndAfter","Home",null,new {@class = "nav-item nav-link active" })
                @Html.ActionLink("İletişim","Contact","Home",null,new {@class = "nav-item nav-link active" })
            </div>
            <a href="https://wa.me/905301347577"  class="btn btn-primary py-2 px-4 ms-3">Bize Ulaşın <i class="bi bi-whatsapp"></i></a>
        </div>
    </nav>
    <!-- Navbar End -->
    <div style="background-color:#383e42">
        @RenderBody()
        <div class="container-fluid position-relative pt-5 wow fadeInUp" data-wow-delay="0.1s" style="z-index: 1;">
            <div class="container">
                <div style="text-align:center;background-color:#deba57!important;border-radius: 15px 50px 15px!important" class="bg-primary p-3">
                    <a href="https://wa.me/905301347577" >
                        <img src="~/source/img/logo-whatsapp1.png"
                             alt="Profile Picture" class="img-responsive img-rounded"
                             style="max-height: 120px; max-width: 120px;">
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer Start -->
    <div class="container-fluid bg-dark text-light py-5 wow fadeInUp" data-wow-delay="0.3s" style="margin-top: -75px;background-color:#293642!important">
        <div class="container pt-5">
            <div class="row g-5 pt-3">
                <div class="col-lg-6 col-md-6">
                    <h3 class="text-white mb-4">Bize Ulaşın</h3>
                    <p class="mb-2"><i class="bi bi-geo-alt text-primary me-2"></i> Suadiye, Ayşeçavuş Cd No : 16, 34740 Kadıköy/İstanbul</p>
                    <p class="mb-2"><i class="bi bi-envelope-open text-primary me-2"></i>info@suadiyehairhouse.com.tr</p>
                    <p class="mb-0"><i class="bi bi-telephone text-primary me-2"></i>+90 530 134 75 77</p>
                </div>
                <div class="col-lg-6 col-md-6">
                    <h3 class="text-white mb-4">Bizi Takip Edin</h3>
                    <div class="d-flex">
@*                        <a class="btn btn-lg btn-primary btn-lg-square rounded me-2" href="#"><i class="fab fa-facebook-f fw-normal"></i></a>
                        *@<a class="btn btn-lg btn-primary btn-lg-square rounded" href="https://www.instagram.com/suadiyehairhouse"><i class="fab fa-instagram fw-normal"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid text-light py-4" style="background: #383e42">
        <div class="container">
            <div class="row g-0">
                <div class="col-md-6 text-center text-md-start">
                    <p class="mb-md-0">&copy; <a class="text-white border-bottom" href="#">Suadiye Hair House</a>. Tüm Hakları Saklıdır.</p>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer End -->
    <!-- Back to Top -->
    <a href="#" style="background-color:#deba57 !important;border-color:#deba57; color:#383e42" class="btn btn-lg btn-primary btn-lg-square rounded back-to-top"><i class="bi bi-arrow-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/source/lib/wow/wow.min.js"></script>
    <script src="~/source/lib/easing/easing.min.js"></script>
    <script src="~/source/lib/waypoints/waypoints.min.js"></script>
    <script src="~/source/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/source/lib/tempusdominus/js/moment.min.js"></script>
    <script src="~/source/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="~/source/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>
    <script src="~/source/lib/twentytwenty/jquery.event.move.js"></script>
    <script src="~/source/lib/twentytwenty/jquery.twentytwenty.js"></script>

    <!-- Template Javascript -->
    <script src="~/source/js/main.js"></script>
</body>
</html>
