@model SuadiyeHairHouse.Models.SendMailDto
@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid bg-primary py-5 hero-header mb-5">
    <div class="row py-3">
        <div class="col-12 text-center">
            <h1 class="display-3 text-white animated zoomIn">İletişim</h1>
            <a href="@Url.Action("Index","Home")" class="h4 text-white">Ana Sayfa</a>
            <i class="far fa-circle text-white px-2"></i>
            <a href="@Url.Action("Contact","Home")" class="h4 text-white">İletişim</a>
        </div>
    </div>
</div>
<!-- Hero End -->
<!-- Contact Start -->
<div class="container-fluid py-5">
    <div class="container">
        <div class="row g-5">
            <div class="col-xl-4 col-lg-6 wow slideInUp" data-wow-delay="0.1s">
                <div class="bg-light rounded h-100 p-5">
                    <div class="section-title">
                        <h5 class="position-relative d-inline-block text-primary text-uppercase">İLETİŞİM</h5>
                        <h1 class="display-6 mb-4">Bize Ulaşın</h1>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-geo-alt fs-1 text-primary me-3"></i>
                        <div class="text-start">
                            <h5 class="mb-0">Ofis Adresi</h5>
                            <span>Suadiye, Ayşeçavuş Cd No : 16, 34740 Kadıköy/İstanbul</span>
                        </div>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-envelope-open fs-1 text-primary me-3"></i>
                        <div class="text-start">
                            <h5 class="mb-0">Mail Adresi</h5>
                            <span>info@suadiyehairhouse.com.tr</span>
                        </div>
                    </div>
                    <div class="d-flex align-items-center">
                        <i class="bi bi-phone-vibrate fs-1 text-primary me-3"></i>
                        <div class="text-start">
                            <h5 class="mb-0">Telefon</h5>
                            <span>+90 530 134 75 77</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-lg-6 wow slideInUp" data-wow-delay="0.3s">
                <form asp-controller="Home" asp-action="Contact" method="post">
                    <div class="row g-3">
                        <div class="col-12">
                            <input asp-for="@Model.Name" type="text" class="form-control border-0 bg-light px-4" placeholder="Adınız" style="height: 55px;">
                            <span class="text-danger" asp-validation-for="@Model.Name"></span>
                        </div>
                        <div class="col-12">
                            <input asp-for="@Model.Email" type="email" class="form-control border-0 bg-light px-4" placeholder="Email Adresiniz" style="height: 55px;">
                            <span class="text-danger" asp-validation-for="@Model.Email"></span>
                        </div>
                        <div class="col-12">
                            <input asp-for="@Model.Phone" type="text" class="form-control border-0 bg-light px-4" placeholder="Telefon" style="height: 55px;">
                             <span class="text-danger" asp-validation-for="@Model.Phone"></span>
                        </div>
                        <div class="col-12">
                            <textarea asp-for="@Model.Message" class="form-control border-0 bg-light px-4 py-3" rows="5" placeholder="Mesajınız"></textarea>
                            <span class="text-danger" asp-validation-for="@Model.Message"></span>
                        </div>
                        <div class="col-12">
                            <button style="color:white!important" class="btn btn-primary w-100 py-3" type="submit">Mesaj Gönder</button>
                        </div>
                    </div>
                </form>

                @if (ViewBag.Message != null)
                {
                    <div class="@(ViewBag.result ? "alert alert-success" : "alert alert-danger")">
                        @ViewBag.Message
                    </div>
                }


                
            </div>
            <div class="col-xl-4 col-lg-12 wow slideInUp" data-wow-delay="0.6s">
                <iframe class="position-relative rounded w-100 h-100"
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3012.8908494826683!2d29.082240076460916!3d40.96196992227445!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cac799f18e6259%3A0xde7bfcd0797388ae!2sSuadiye%20Hair%20House!5e0!3m2!1str!2str!4v1693577210256!5m2!1str!2str"
                        frameborder="0" style="min-height: 400px; border:0;" allowfullscreen="" aria-hidden="false"
                        tabindex="0"></iframe>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
